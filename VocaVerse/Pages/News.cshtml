    <!-- Main Content -->
    <div class="main-container">
        <div class="container">
            <!-- Hero Section -->
            <div class="hero-section">
                <h1 class="hero-title">Latest News</h1>
                <p class="hero-subtitle">Stay updated with the latest features and developments in VocaVerse</p>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <!-- Major Update News -->
                    <article class="news-card fade-in">
                        <span class="news-badge badge-upcoming">Upcoming Feature</span>
                        <h2 class="news-title">AI-Powered Smart Opponent Coming Soon!</h2>
                        <div class="news-meta">
                            <span><i class="fas fa-calendar-alt me-1"></i>December 15, 2024</span>
                            <span><i class="fas fa-user me-1"></i>Development Team</span>
                            <span><i class="fas fa-tags me-1"></i>AI, Gameplay</span>
                        </div>
                        <img src="/images/VocaVerse1.png" alt="AI Opponent" class="news-image">
